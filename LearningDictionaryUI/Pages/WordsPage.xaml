<Page x:Class="LearningDictionaryUI.WordsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LearningDictionaryUI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="WordsPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center">
            <TextBlock Text="Words to learn" />
            <ScrollViewer Height="200">
                <ItemsControl ItemsSource="{Binding WordsList}" Margin="10">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <local:Word/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
            <TextBlock Text="New word"/>
            <TextBox Text="{Binding NewWordToLearn, Mode=TwoWay}"/>
            <TextBlock Text="Translation"/>
            <TextBox Text="{Binding NewTranslation, Mode=TwoWay}"/>
            <StackPanel Orientation="Horizontal">
                <Button Command="{Binding AddNewWordCommand}" Content="Add"/>
                <Button Command="{Binding DeleteSelectedWordsCommand}" Content="Delete"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
